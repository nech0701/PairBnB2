<p id="notice"><%= notice %></p>

<h1>Listing Listings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Accomodates</th>
      <th>Address</th>
      <th>City</th>
      <th>Price</th>
      <th>Smoking room</th>
      <th>Pet friendly</th>
      <th>Apartment</th>
      <th>House</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
        <td><% listing.showrooms.each do |showroom| %>
          <%= image_tag showroom.url, height: 80, width: 80 %> 
          <% end %>
        </td>
        <td><%= listing.user_id %></td>
        <td><%= listing.description %></td>
        <td><%= listing.accomodates %></td>
        <td><%= listing.address %></td>
        <td><%= listing.city %></td>
        <td><%= listing.price %></td>
        <td><%= listing.smoking_room %></td>
        <td><%= listing.pet_friendly %></td>
        <td><%= listing.apartment %></td>
        <td><%= listing.house %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>