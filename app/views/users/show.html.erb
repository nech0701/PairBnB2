<p id="notice"><%= notice %></p>

<h1>Profile for <%=@user.first_name%></h1>

<p>
  <%= image_tag @user.avatar.url(:thumb) if @user.avatar? %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %>
<%= link_to 'Back', listings_path %>
